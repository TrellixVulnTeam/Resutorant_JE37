<div class="row">
    {{#each restaurants}}
    <div class="col-md-3">
        <div class="card border-primary mb-3" style="max-width: 20rem;">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{name}} <a href="/restaurant/edit/{{_id}}" class="btn border-shadow update">
                        <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span></a>
                </h4>
                <p>{{speciality}}</p>
                <p>{{location}}</p>
                <p>{{score}}</p>
                <p>{{latitud}}</p>
                <p>{{longitud}}</p>
                <form action="/restaurant/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE" id="">
                    <button class="btn btn-danger  btn-block btn-sm">
                        <i class='bx bxs-x-circle'></i> Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <h1>Hello {{user.name}}</h1>
            <p clsss="lead">No hay restaurantes todavia.</p>
            <a href="/restaurant/add" class="btn btn-success btn-block">Crea uno!</a>
        </div>
    </div>
    {{/each}}
</div>