{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Edit Restaurant</h3>
    </div>
    <div class="card-body">
      <form action="/restaurant/edit-restaurant/{{restaurant._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <input type="text" name="name" class="form-control" value="{{restaurant.name}}" />
        </div>
        <div class="form-group">
          <input type="text" name="location" class="form-control" value="{{restaurant.location}}" />
        </div>
        <div class="form-group">
          <input type="text" name="speciality" class="form-control" value="{{restaurant.speciality}}" />
        </div>
        <div class="form-group">
          <input type="text" name="score" class="form-control" value="{{restaurant.score}}" />
        </div>
        <div class="form-group">
          <input type="text" name="precio" class="form-control" value="{{restaurant.precio}}" />
        </div>
        <div class="form-group">
          <input type="text" name="latitud" class="form-control" value="{{restaurant.latitud}}" />
        </div>
        <div class="form-group">
          <input type="text" name="longitud" class="form-control" value="{{restaurant.longitud}}" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>