<fieldset>
    <div class="form-group row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header">
                    Account Register
                </div>
                <div class="card-body">
                    <form action="/signup" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="name" placeholder="Name" value="{{name}}">
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}">
                        </div>
                        <div class="form-group">
                            <label for="gender" class="form-label mt-4">Tipo de usuario</label>
                            <div class="radio inline">
                                <input type="radio" id="radio-4" name="userType" value="owner">
                                <label for="radio-4" class="radio-label">Due√±o</label>
                            </div>
                            <div class="radio inline">
                                <input type="radio" id="radio-5" name="userType" value="Normal">
                                <label for="radio-5" class="radio-label">Normal</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="password" placeholder="Password"
                                value="{{password}}">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="confirm_password"
                                placeholder="Confirm Password" value="{{confirm_password}}">
                        </div>
                        <button class="btn btn-primary btn-block">
                            Signup
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</fieldset>